{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>News</h1>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN') %}
            <a href="{{ path('app_news_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Neue Nachricht erstellen
            </a>
        {% endif %}
    </div>
    
    {% if news is empty %}
        <div class="text-center py-5">
            <i class="bi bi-newspaper text-muted icon-placeholder"></i>
            <p class="text-muted mt-3">Keine News verf√ºgbar.</p>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN') %}
                <a href="{{ path('app_news_create') }}" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle me-2"></i>Erste Nachricht erstellen
                </a>
            {% endif %}
        </div>
    {% else %}
        {% for item in news %}
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ item.title }}</h5>
                    <p class="card-text">{{ item.content }}</p>
                    <small class="text-muted">{{ item.createdAt|date('d.m.Y H:i') }}</small>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
