{% if news|length > 0 %}
    <div class="list-group">
        {% for item in news %}
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">{{ item.title }}</h6>
                    <small>{{ item.createdAt|date('d.m.Y') }}</small>
                </div>
                <p class="mb-1">{{ item.content|slice(0, 80) ~ (item.content|length > 80 ? 'â€¦' : '') }}</p>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-muted text-center">Keine aktuellen News</div>
{% endif %}
