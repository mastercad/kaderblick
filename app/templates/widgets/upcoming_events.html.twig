{% if events|length > 0 %}
    <div class="list-group">
        {% for event in events %}
            <div class="list-group-item event-list-item" style="--event-color: {{ event.calendarEventType.color }}">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">{{ event.title }}</h6>
                    <small>
                        {% if event.endDate %}
                            {{ event.startDate|date('H:i') }} - {{ event.endDate|date('H:i') }}
                        {% else %}
                            {{ event.startDate|date('H:i') }}
                        {% endif %}
                    </small>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-calendar"></i> {{ event.startDate|date('d.m.Y') }}
                        {% if event.location %}
                            <span class="ms-2">
                                <i class="fas fa-map-marker-alt"></i> {{ event.location.name }}
                            </span>
                        {% endif %}
                    </small>
                    <small class="badge event-badge" style="--event-color: {{ event.calendarEventType.color }}">
                        {{ event.calendarEventType.name }}
                    </small>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-muted text-center">Keine anstehenden Termine</div>
{% endif %}
