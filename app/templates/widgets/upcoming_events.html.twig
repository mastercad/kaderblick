{% if events|length > 0 %}
    <div class="list-group">
        {% for event in events %}
            <div class="list-group-item event-list-item dynamic-event-color" data-event-color="{{ event.calendarEventType.color }}">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h6 class="mb-1">{{ event.title }}</h6>
                        <div class="text-muted mt-1" style="font-size: 11px; line-height: 1.2;">
                            <span>
                                <i class="fas fa-calendar"></i> {{ event.startDate|date('d.m.Y') }}
                            </span>
                            <span class="ms-2">
                                {% if event.endDate %}
                                    {{ event.startDate|date('H:i') }} - {{ event.endDate|date('H:i') }}
                                {% else %}
                                    {{ event.startDate|date('H:i') }}
                                {% endif %}
                            </span>
                        </div>
                    </div>
                    <div class="col-4 text-end d-flex flex-column align-items-end justify-content-center">
                        <span class="badge event-badge dynamic-event-color mb-1" data-event-color="{{ event.calendarEventType.color }}">
                            {{ event.calendarEventType.name }}
                        </span>
                        {% if event.location %}
                            <span class="d-flex align-items-center text-muted" style="font-size: 0.92em;">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <span>{{ event.location.name }}</span>
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-muted text-center">Keine anstehenden Termine</div>
{% endif %}
