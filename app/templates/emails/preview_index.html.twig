    <link rel="stylesheet" href="/css/email.css">
    <link rel="stylesheet" href="/css/base.css">
</head>
<body>
    <div class="email-container" style="margin: 40px auto;">
        <div style="color: #10b981; font-size: 24px; font-weight: 700; margin-bottom: 24px; text-align: center;">E-Mail-Templates Vorschau</div>
        <ul style="list-style: none; padding: 0; margin: 0;">
            {% for template in templates %}
                <li style="margin-bottom: 18px; text-align: center;">
                    <a class="email-button" href="{{ path('email_preview', {template: template}) }}" style="font-size: 16px; letter-spacing: 0.5px;">{{ template|replace({'_':' '})|title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</body>
</html>
