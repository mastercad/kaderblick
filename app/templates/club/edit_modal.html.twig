<div class="modal fade" id="clubEditModal" tabindex="-1" aria-labelledby="clubEditModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content shadow-lg border-0">
  <div class="modal-header text-white align-items-center">
        <i class="fas fa-pen-fancy fa-lg me-2"></i>
        <h5 class="modal-title fw-bold" id="clubEditModalLabel">Verein bearbeiten</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Schließen"></button>
      </div>
      <form id="clubEditForm" autocomplete="off">
        <div class="modal-body bg-light">
          <input type="hidden" name="id" value="{{ club.id }}">

          <div class="mb-4 pb-2 border-bottom">
            <h6 class="text-primary mb-3"><i class="fas fa-info-circle me-1"></i> Stammdaten</h6>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="clubName" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control form-control-lg" id="clubName" name="name" value="{{ club.name }}" required>
              </div>
              <div class="col-md-6">
                <label for="clubShortName" class="form-label">Kurzname</label>
                <input type="text" class="form-control" id="clubShortName" name="shortName" value="{{ club.shortName }}">
              </div>
              <div class="col-md-6">
                <label for="clubAbbreviation" class="form-label">Abkürzung</label>
                <input type="text" class="form-control" id="clubAbbreviation" name="abbreviation" value="{{ club.abbreviation }}">
              </div>
              <div class="col-md-6">
                <label for="clubStadiumName" class="form-label">Stadion</label>
                <input type="text" class="form-control" id="clubStadiumName" name="stadiumName" value="{{ club.stadiumName }}">
              </div>
              <div class="col-md-6">
                <label for="clubColors" class="form-label">Vereinsfarben</label>
                <input type="text" class="form-control" id="clubColors" name="clubColors" value="{{ club.clubColors }}">
              </div>
              <div class="col-md-6">
                <label for="contactPerson" class="form-label">Ansprechpartner</label>
                <input type="text" class="form-control" id="contactPerson" name="contactPerson" value="{{ club.contactPerson }}">
              </div>
              <div class="col-md-6">
                <label for="foundingYear" class="form-label">Gründungsjahr</label>
                <input type="number" min="1800" max="2100" class="form-control" id="foundingYear" name="foundingYear" value="{{ club.foundingYear }}">
              </div>
              <div class="col-md-6">
                <label for="locationAddress" class="form-label">Adresse (Sportplatz)</label>
                <input type="text" class="form-control" id="locationAddress" name="locationAddress" value="{{ club.location ? club.location.address : '' }}">
              </div>
              <div class="col-md-6">
                <label for="locationCity" class="form-label">Ort (Sportplatz)</label>
                <input type="text" class="form-control" id="locationCity" name="locationCity" value="{{ club.location ? club.location.city : '' }}">
              </div>
            </div>
            <div class="row g-3 mt-4">
          </div>

          <div class="mb-4 pb-2 border-bottom">
            <h6 class="text-primary mb-3"><i class="fas fa-link me-1"></i> Kontakt & Web</h6>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="clubWebsite" class="form-label">Website</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-globe"></i></span>
                  <input type="url" class="form-control" id="clubWebsite" name="website" value="{{ club.website }}">
                </div>
              </div>
              <div class="col-md-6">
                <label for="clubEmail" class="form-label">E-Mail</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <input type="email" class="form-control" id="clubEmail" name="email" value="{{ club.email }}">
                </div>
              </div>
              <div class="col-md-6">
                <label for="clubPhone" class="form-label">Telefon</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-phone"></i></span>
                  <input type="text" class="form-control" id="clubPhone" name="phone" value="{{ club.phone }}">
                </div>
              </div>
              <div class="col-md-6 d-flex align-items-end">
                <div class="form-check form-switch ms-2">
                  <input class="form-check-input" type="checkbox" id="clubActive" name="active" value="1" {% if club.active %}checked{% endif %}>
                  <label class="form-check-label fw-semibold" for="clubActive">
                    <i class="fas fa-check-circle text-success me-1"></i> Aktiv
                  </label>
                </div>
              </div>
            </div>
              <div class="col-md-6">
                <label for="clubLogoUrl" class="form-label">Logo-URL</label>
                <input type="url" class="form-control" id="clubLogoUrl" name="logoUrl" value="{{ club.logoUrl }}">
              </div>
          </div>

          <div class="mb-4 pb-2 border-bottom">
            <h6 class="text-primary mb-3"><i class="fas fa-futbol me-1"></i> fussball.de Optionen</h6>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="clubFussballDeId" class="form-label">fussball.de ID</label>
                <input type="text" class="form-control" id="clubFussballDeId" name="fussballDeId" value="{{ club.fussballDeId }}">
              </div>
              <div class="col-md-6">
                <label for="clubFussballDeUrl" class="form-label">fussball.de URL</label>
                <input type="url" class="form-control" id="clubFussballDeUrl" name="fussballDeUrl" value="{{ club.fussballDeUrl }}">
              </div>
            </div>
            <div class="mb-3 mt-2">
              <button type="button" class="btn btn-info" id="fetchFussballDeBtn">
                <i class="fas fa-download"></i> fussball.de-Daten laden
              </button>
              <span id="fussballDeLoading" class="ms-2 text-muted d-none"><i class="fas fa-spinner fa-spin"></i> Lädt...</span>
            </div>
          </div>
          
        <div class="modal-footer bg-white">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Abbrechen
          </button>
          <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save"></i> Speichern
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

