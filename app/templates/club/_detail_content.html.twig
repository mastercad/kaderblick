{# club/_detail_content.html.twig #}
<div class="modal-header align-items-center">
    {% if club.logoUrl %}
        <img src="{{ asset(club.logoUrl) }}" alt="Logo {{ club.name }}" class="me-2" style="width:32px;height:32px;object-fit:contain;">
    {% else %}
        <i class="fas fa-futbol fa-lg me-2 text-secondary"></i>
    {% endif %}
    <div>
        <h2 class="mb-0 d-inline">{{ club.name }}</h2>
        {% if club.shortName %}
            <span class="text-muted ms-2">({{ club.shortName }})</span>
        {% endif %}
        {% if club.active is defined %}
            {% if club.active %}
                <span class="badge bg-success ms-2">Aktiv</span>
            {% else %}
                <span class="badge bg-secondary ms-2">Inaktiv</span>
            {% endif %}
        {% endif %}
    </div>
</div>
<div class="modal-body">
    <div class="mb-3">
        <h5 class="text-primary"><i class="fas fa-info-circle me-1"></i> Vereinsinfo</h5>
        <dl class="row mb-0">
            {% if club.abbreviation %}
                <dt class="col-sm-4">Abkürzung</dt>
                <dd class="col-sm-8">{{ club.abbreviation }}</dd>
            {% endif %}
            {% if club.stadiumName %}
                <dt class="col-sm-4">Stadion</dt>
                <dd class="col-sm-8">{{ club.stadiumName }}</dd>
            {% endif %}
            {% if club.location %}
                <dt class="col-sm-4">Spielstätte</dt>
                <dd class="col-sm-8">
                    {{ club.location.name }}
                    {% if club.location.address or club.location.city %}
                        <br>
                        <small>
                            {% if club.location.address %}{{ club.location.address }}{% endif %}
                            {% if club.location.city %}, {{ club.location.city }}{% endif %}
                        </small>
                    {% endif %}
                    {% if club.location.capacity %}
                        <br><small>Zuschauer: {{ club.location.capacity }}</small>
                    {% endif %}
                    {% if club.location.surfaceType %}
                        <br><small>Belag: {{ club.location.surfaceType }}</small>
                    {% endif %}
                    {% if club.location.hasFloodlight is not null %}
                        <br><small>Flutlicht: {{ club.location.hasFloodlight ? 'Ja' : 'Nein' }}</small>
                    {% endif %}
                    {% if club.location.facilities %}
                        <br><small>Ausstattung: {{ club.location.facilities }}</small>
                    {% endif %}
                </dd>
            {% endif %}
        </dl>
        {% if not club.abbreviation and not club.stadiumName and not club.location %}
            <div class="alert alert-info mt-3">
                Für diesen Verein sind noch keine weiteren Informationen hinterlegt.
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        <h5 class="text-primary"><i class="fas fa-link me-1"></i> Kontakt & Web</h5>
        <dl class="row mb-0">
            {% if club.website %}
                <dt class="col-sm-4">Website</dt>
                <dd class="col-sm-8">
                    <a href="{{ club.website }}" target="_blank" rel="noopener">{{ club.website }}</a>
                </dd>
            {% endif %}
            {% if club.email %}
                <dt class="col-sm-4">E-Mail</dt>
                <dd class="col-sm-8">{{ club.email }}</dd>
            {% endif %}
            {% if club.phone %}
                <dt class="col-sm-4">Telefon</dt>
                <dd class="col-sm-8">{{ club.phone }}</dd>
            {% endif %}
        </dl>
        {% if not club.website and not club.email and not club.phone %}
            <div class="alert alert-info mt-3">
                Es sind keine Kontaktinformationen hinterlegt.
            </div>
        {% endif %}
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-warning edit-club-btn" data-id="{{ club.id }}">
        <i class="fas fa-edit"></i> Bearbeiten
    </button>
    <button type="button" class="btn btn-danger delete-club-btn" data-id="{{ club.id }}">
        <i class="fas fa-trash"></i> Löschen
    </button>
</div>
<div id="clubEditModalContainer"></div>
