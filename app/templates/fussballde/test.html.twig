{% extends 'base.html.twig' %}

{% block title %}fussball.de Test{% endblock %}

{% block body %}
    <h1>fussball.de Team-Suche</h1>
    <form method="post">
        <label for="team_name">Teamname:</label>
        <input type="text" id="team_name" name="team_name" value="{{ search|e }}" required>
        <button type="submit">Suchen</button>
    </form>

    {% if teams is not null %}
        <h2>Suchergebnisse</h2>
        {% if teams|length == 0 %}
            <p>Keine Teams gefunden.</p>
        {% else %}
            <ul>
                {% for team in teams %}
                    <li>
                        <strong>{{ team.name }}</strong><br>
                        <a href="{{ team.link }}" target="_blank">Zur fussball.de-Seite</a><br>
                        Verein-ID: {{ team.vereinId }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock %}
