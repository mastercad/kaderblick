{% extends 'base.html.twig' %}

{% block title %}Benutzerverwaltung{% endblock %}

{% block body %}
    <div class="container">
        <h1>Benutzerverwaltung</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Status</th>
                    <th>Zuordnung</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.isVerified %}
                                <span class="badge bg-success">Verifiziert</span>
                            {% else %}
                                <span class="badge bg-warning">Nicht verifiziert</span>
                            {% endif %}
                            {% if user.isEnabled %}
                                <span class="badge bg-success">Aktiv</span>
                            {% else %}
                                <span class="badge bg-danger">Deaktiviert</span>
                            {% endif %}
                        </td>
                        <td>
                            {% set assignments = [] %}
                            {% if user.player %}
                                {% set assignments = assignments|merge(['Spieler']) %}
                            {% endif %}
                            {% if user.coach %}
                                {% set assignments = assignments|merge(['Trainer']) %}
                            {% endif %}
                            {% if user.club %}
                                {% set assignments = assignments|merge(['Verein']) %}
                            {% endif %}
                            
                            {% if assignments|length > 0 %}
                                {% for assignment in assignments %}
                                    <span class="badge bg-info">{{ assignment }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="badge bg-secondary">Keine</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('admin_users_assign', {id: user.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-user-edit"></i> Zuordnen
                            </a>
                            {% if not user.isEnabled %}
                                <a href="{{ path('admin_users_toggle_status', {id: user.id}) }}" class="btn btn-success btn-sm">
                                    <i class="fas fa-check"></i> Aktivieren
                                </a>
                            {% else %}
                                <a href="{{ path('admin_users_toggle_status', {id: user.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="fas fa-ban"></i> Deaktivieren
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
