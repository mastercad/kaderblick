{% extends 'base.html.twig' %}

{% block title %}Reports{% endblock %}

{% block body %}
<h1>Reports</h1>
<a href="{{ path('app_report_builder') }}" class="btn btn-success mb-3">Create New Report</a>

<h2>Your Reports</h2>
<ul class="list-group mb-4">
    {% for report in userReports %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>{{ report.name }}</span>
            <span>
                <a href="{{ path('app_report_builder', {id: report.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                <a href="{{ path('app_report_add_widget', {id: report.id}) }}" class="btn btn-sm btn-secondary">Add to Dashboard</a>
                <a href="{{ path('app_report_delete', {id: report.id}) }}" class="btn btn-sm btn-danger">Delete</a>
            </span>
        </li>
    {% else %}
        <li class="list-group-item">No reports found.</li>
    {% endfor %}
</ul>

<h2>Templates</h2>
<ul class="list-group">
    {% for template in templates %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>{{ template.name }}</span>
            <span>
{#                <a href="{{ path('app_report_copy', {id: template.id}) }}" class="btn btn-sm btn-info">Use Template</a> #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_report_builder', {id: template.id}) }}" class="btn btn-sm btn-primary">Edit Template</a>
                {% endif %}
            </span>
        </li>
    {% else %}
        <li class="list-group-item">No templates found.</li>
    {% endfor %}
</ul>
{% endblock %}
