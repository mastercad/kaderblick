{% extends 'base.html.twig' %}

{% block title %}Spiele Ãœbersicht{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Spiele</h1>

    {% if running_games is not empty %}
        <h3 class="mt-4 mb-2">Aktuell laufende Spiele</h3>
        <div class="list-group mb-4">
            {% for game in running_games %}
                <div class="d-flex align-items-center list-group-item list-group-item-action justify-content-between">
                    <a href="{{ path('games_show', {id: game.id}) }}" class="flex-grow-1 text-decoration-none text-dark">
                        <strong>{{ game.homeTeam.name }}</strong> vs <strong>{{ game.awayTeam.name }}</strong>
                        <span class="badge bg-success ms-2">Live</span>
                        <span class="text-muted small ms-2">
                            {{ game.calendarEvent.startDate|date('d.m.Y H:i') }} - {{ game.calendarEvent.endDate|date('H:i') }}
                        </span>
                    </a>
                    <div class="mt-3">
                        <a href="/game/{{ game.id }}/events" class="btn btn-success" target="_blank">
                            <i class="fas fa-futbol me-1"></i>Spielereignis erfassen
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if upcoming_games is not empty %}
        <h3 class="mt-4 mb-2">Anstehende Spiele</h3>
        <div class="list-group mb-4">
            {% for game in upcoming_games %}
                <a href="{{ path('games_show', {id: game.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span>
                        <strong>{{ game.homeTeam.name }}</strong> vs <strong>{{ game.awayTeam.name }}</strong>
                    </span>
                    <span class="text-muted small">
                        {{ game.calendarEvent.startDate|date('d.m.Y H:i') }}
                    </span>
                </a>
            {% endfor %}
        </div>
    {% endif %}

    {% if finished_games is not empty %}
        <h3 class="mt-4 mb-2">Absolvierte Spiele</h3>
        <div class="list-group mb-4">
            {% for gameDetails in finished_games %}
                <a href="{{ path('games_show', {id: gameDetails.game.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span>
                        <strong>{{ gameDetails.game.homeTeam.name }}</strong> vs <strong>{{ gameDetails.game.awayTeam.name }}</strong>
                        {% if gameDetails.homeScore is not null and gameDetails.awayScore is not null %}
                            <span class="badge bg-secondary ms-2">{{ gameDetails.homeScore }} : {{ gameDetails.awayScore }}</span>
                        {% endif %}
                    </span>
                    <span class="text-muted small">
                        {{ gameDetails.game.calendarEvent.startDate|date('d.m.Y H:i') }}
                    </span>
                </a>
            {% endfor %}
        </div>
    {% endif %}

    {% if running_games is empty and upcoming_games is empty and finished_games is empty %}
        <div class="alert alert-info mt-4">Keine Spiele gefunden.</div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
