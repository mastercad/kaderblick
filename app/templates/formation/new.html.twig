{# templates/formation/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Neue Teamaufstellung erstellen{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>Neue Teamaufstellung erstellen</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_row(form.name, {
                                    'attr': {'class': 'form-control'},
                                    'label': 'Aufstellungsname'
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.formationType, {
                                    'attr': {'class': 'form-select'},
                                    'label': 'Sportart'
                                }) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('formations_index') }}" class="btn btn-outline-secondary me-md-2">
                                Abbrechen
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Erstellen und bearbeiten
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="mt-4">
                <div class="alert alert-info">
                    <h5><i class="bi bi-info-circle"></i> Informationen</h5>
                    <p>
                        Nach dem Erstellen der Grunddaten werden Sie zur Bearbeitungsansicht weitergeleitet, 
                        wo Sie die Positionen der Spieler festlegen können.
                    </p>
                    <p class="mb-0">
                        Sie können später jederzeit zurückkehren und die Aufstellung anpassen.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}